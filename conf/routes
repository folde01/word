# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Web 1.0 client
GET     /                           controllers.HomeController.index
GET     /addPlayer1                 controllers.HomeController.addPlayer1(name: String, secretWord: String)


# JSON API
GET     /newGame                    controllers.HomeController.newGame
GET     /addPlayer                  controllers.HomeController.addPlayer(name: String, secretWord: String)
GET     /guess                      controllers.HomeController.guess(guesserId: Int, word: String, guesseeId: Int)
GET     /gameState                  controllers.HomeController.gameState

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
