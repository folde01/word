# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Web 1.0 client
GET        /                                                 controllers.HomeController.index
GET        /addPlayer/:playerId                              controllers.HomeController.addPlayer(playerId: Int, name: String, secretWord: String)
GET        /addPlayerForm/:playerId                          controllers.HomeController.addPlayerForm(playerId: Int, msg: String = "")
GET        /addPlayerForm/:playerId/:msg                     controllers.HomeController.addPlayerForm(playerId: Int, msg: String)
GET        /playerTurnForm/:playerId                         controllers.HomeController.playerTurnForm(playerId: Int, msg: String = "")
GET        /playerTurnForm/:playerId/:msg                    controllers.HomeController.playerTurnForm(playerId: Int, msg: String)
GET        /playerTurn/:playerId                             controllers.HomeController.playerTurn(playerId: Int, word: String)
GET        /result/:playerId/:word/:inCommon/:answers        controllers.HomeController.result(playerId: Int, word: String, inCommon: Int, answers: String)
GET        /win/:playerId                                    controllers.HomeController.win(playerId: Int)


# JSON API
GET        /newGame                                          controllers.HomeController.newGame
GET        /addPlayerJson                                    controllers.HomeController.addPlayerJson(playerId: Int, name: String, secretWord: String)
GET        /guess                                            controllers.HomeController.guess(guesserId: Int, word: String, guesseeId: Int)
GET        /gameState                                        controllers.HomeController.gameState

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                     controllers.Assets.versioned(path="/public", file: Asset)
